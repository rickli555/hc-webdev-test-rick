{
	"extends": [
		"next",
		"mantine"
	],
	"plugins": [
		"react"
	],
	"overrides": [
		{
			"files": [
				"**/?(*.)+(spec|test).[jt]s?(x)"
			]
		}
	],
	"parserOptions": {
		"project": [
			"./tsconfig.json"
		]
	},
	"rules": {
		"@typescript-eslint/no-unused-vars": "warn",
		"@typescript-eslint/no-use-before-define": 0,
		"@typescript-eslint/quotes": [
			"error",
			"single",
			{
				"allowTemplateLiterals": true
			}
		],
		"allowIndentationTabs": 0,
		"arrow-body-style": 0,
		"consistent-return": 0,
		"indent": [
			2,
			"tab",
			{
				"SwitchCase": 1
			}
		],
		"max-len": [
			"error",
			{
				"code": 100,
				"ignoreComments": true,
				"tabWidth": 2
			}
		],
		"no-console": [
			"warn",
			{
				"allow": [
					"warn",
					"error"
				]
			}
		],
		"no-tabs": 0,
		"quotes": [
			"error",
			"single",
			{
				"allowTemplateLiterals": true
			}
		],
		"react/react-in-jsx-scope": "off",
		"react/jsx-indent-props": [
			2,
			"tab"
		]
	}
}